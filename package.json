{
  "name": "greenhouse-auto-apply-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Greenhouse auto-apply bot with CLI and Lambda packages",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build --workspace=@greenhouse-bot/core",
    "build:cli": "npm run build --workspace=@greenhouse-bot/cli",
    "build:lambda": "npm run build --workspace=@greenhouse-bot/lambda",
    "start": "npm run start --workspace=@greenhouse-bot/cli",
    "dev": "npm run dev --workspace=@greenhouse-bot/cli",
    "test:job": "npm run test:job --workspace=@greenhouse-bot/cli",
    "playwright:install": "npm run playwright:install --workspace=@greenhouse-bot/cli",
    "install:all": "npm install && npm run build:core && npm run build:cli && npm run build:lambda"
  },
  "keywords": [
    "greenhouse",
    "job-application",
    "automation",
    "bot",
    "playwright",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
