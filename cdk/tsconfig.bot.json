{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/bot",
    "rootDir": "./src/bot",
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["node", "playwright"]
  },
  "include": ["src/bot/**/*"],
  "exclude": ["node_modules", "dist", "cdk.out"]
}
