{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["node", "aws-lambda"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["bin/**/*", "lib/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "cdk.out"]
}
